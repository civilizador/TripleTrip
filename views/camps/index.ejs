<% include ../partials/headerForIndex %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://www.amcharts.com/lib/3/ammap.js"></script>
    <script type="text/javascript" src="https://www.amcharts.com/lib/3/maps/js/worldLow.js"></script>
          
          
        <style>
        /* Make the image fully responsive */
        .carousel-inner img {
          width: 100%;
          height: 108vh; 
          overflow: hidden;
        }
          #demo1{margin-top: 20px;}
        </style>
 
     <div id="demo" class="carousel slide carousel-fade" data-ride="carousel">

          <!--Indicators -->
          <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
            <li data-target="#demo" data-slide-to="3"></li>
            <li data-target="#demo" data-slide-to="4"></li>
          </ul>

          <!--The slideshow -->
          
          <div class="carousel-inner">

            <div class="carousel-item active">
              <img src="https://images.unsplash.com/photo-1471085507142-12355181f804?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8347073f0cfd075b51c9bdf525e740b4&auto=format&fit=crop&w=1500&q=80" width="1100" height="500">
              <div id='indexPageFirstSlideCaption' class="carousel-caption d-none d-md-block">
                <h1>Welcome to   <img id='logoMainPage' src='logoLg.png'>  </h1>
                <h2>Most detailed and accurate Travel Blog and Travel adviser</h2>
              </div>
            </div>

            <% allposts.forEach(function(allpostsPlaceholder){ %>

               <div class="carousel-item">
                    <img src="<%= allpostsPlaceholder.images[0] %>" >  
                    <div class='mapOnIndexPage' id="mapOnIndexPage<%=allpostsPlaceholder.id%>" style="width: 18vw; height: 23vh;">
                                   <% include ../partials/mapOnIndexPage %>
                              </div> 
                    
                         <div class="carousel-caption d-none d-md-block">
                              <script type="text/javascript" src="https://www.amcharts.com/lib/3/maps/js/<%=allpostsPlaceholder.country%>Low.js"></script>
                               <!--End of Map-->
                            
                              <div id='indexPageOthersSlidesCaption'>
                              <h3><%=  allpostsPlaceholder.name  %></h3> <h3><%=  allpostsPlaceholder.typeOfTrip  %></h3>
                              <h4> <%=  allpostsPlaceholder.desc.substring(0,60); %>...</h4>
                              <br>
                              <a href="/index/<%= allpostsPlaceholder._id %>" class="btn btn-lg btn-warning">More Info</a>
                              </div>
                              
                         </div>
                    </div>
                    <% }); %>
               </div>      



   <!--Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>

<!-- End of Carousel-->
     
     
     <div id='wrapperOnIndexPage' class="container">
          <h1>Latest Posts </h1>   
     <!-- Printing out all posts from the allposts -->
               <div class='row'>
                    <% allposts.forEach(function(allpostsPlaceholder){ %>
                         <div class="col-lg-6 col-md-6 col-sm-12">
                              <div class="thumbnail">
                                   <img id='imageOnIndexPage' class='image'  src="<%= allpostsPlaceholder.images[0] %>" >
                                   <div class="caption">
                                        <h3> <%=  allpostsPlaceholder.name  %>  </h3>
                                   </div>
                                   <div id='descriptionOnIndex' class="caption">
                                      <!-- Printing first 100 characters using substring(0,100) -->
                                        <p> <%=  allpostsPlaceholder.desc.substring(0,100);  %>  </p>
                                   </div>
                                   <p><em>Submitted by: <a href="/user/<%= allpostsPlaceholder.author.id%>"> <%= allpostsPlaceholder.author.username %> </a>, <%= moment(allpostsPlaceholder.created).fromNow() %></em> </p>                       
                                  <!--Every object in MONGODB while created gets uniq ID which we use here to create a new camp-specific URL everytime user clics on "more info" button -->
                                        <a href="/index/<%= allpostsPlaceholder._id %>" class="btn btn-sm btn-warning">More Info</a>
                              </div>
                         </div>
                    <% }); %>
               </div>
     </div>

<div id="demo1" class="carousel slide carousel-fade" data-ride="carousel">
 
   <!--The slideshow -->
  <div class="carousel-inner">
     <% tempRegions.forEach(function(tempRegions){ %>
     <div class="carousel-item active">
          <img style='width=100%; height=100%' src="<%=tempRegions.image%>" >
          <div class="carousel-caption d-none d-md-block">
               <div id="mapOnIndexPageBottomSlideShow" style="width: 40%; height: 250px;"></div>
               <a class='linksOnIndexPageBottom' href='/index/showByRegion/<%=  tempRegions.name  %>'> 
                    <h3  ><%=  tempRegions.name %></h3>
               </a>
          </div>
     </div>
        <% }); %>
    </div>
</div>
