<% include ../partials/header %> 

<div class="container">
     <header class="jumbotron">
         <div class="container">
            
 
             <p>When travel is in your DNA</p>
             <p>
                <a class="btn btn-primary btn-large" href="/index/new">Add New Experience</a>
             </p>
         </div>
         
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <div class="col-md-12">
         
            	<form action="/index" method="GET" class="form-inline">
            		<div class="form-group">
            			<input type="text" name="search" placeholder="search for new experience..." class="form-control">
            			<input type="submit" value="Search" class="btn btn-default">
            		</div>
            	</form>
          
         </div>
      
     </header>

<!--//End of styling part//-->


      
      
        <% camps.forEach(function(campPlaceholder){ %>
          
            <div class="col-md-3 col-sm-6">
                
                <div class="thumbnail">
                    <div class="thumbnail">
                    <img   src="<%= campPlaceholder.image %>" > 
                    </div>        
                        <div class="caption">
                          <h3> <%=  campPlaceholder.name  %>  </h3>
                        </div>
                        <div class="caption">
                            <!-- Printing first 100 characters using substring(0,100) -->
                          <h4> <%= // campPlaceholder.desc.substring(0,100);  %>  </h4>
                        </div>
                        <!--Every object in MONGODB while created gets uniq ID which we use here to create a new camp-specific URL everytime user clics on "more info" button -->
                    <a href="/index/<%= campPlaceholder._id %>" class="btn btn-sm btn-warning">More Info</a>    
                </div>
            </div>
        <% }); %>
                   
    </div>
  
    </div>
     
</div>

<% include ../partials/footer %>


