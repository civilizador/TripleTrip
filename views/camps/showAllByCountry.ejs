   
  
<% include ../partials/header %>
<div class="container showpage">
    
        <div  class="row">
            <div class="col-md-3">
                <p class="lead">Map</p>
            <div class="list-group">
                <li>Info1</li>
                <li>Info2</li>
                <li>Info3</li>
            </div>
        </div>
        
        
<div class="col-md-9">
     
     <div class='row'>
          <% postsByCountryName.forEach(function(posts){ %>
               <div class="col-lg-12 col-md-6 col-sm-4">
                    <div class="thumbnail">
                         <img id='imageOnIndexPage' class='image'  src="<%= posts.image %>" >
                         <div class="caption">
                              <h3> <%=  posts.name  %>  </h3>
                         </div>
                         <div id='descriptionOnIndex' class="caption">
                              <!-- Printing first 100 characters using substring(0,100) -->
                              <p> <%=  posts.desc;  %>  </p>
                         </div>
                              <!--Every object in MONGODB while created gets uniq ID which we use here to create a new camp-specific URL everytime user clics on "more info" button -->
                              <a href="/index/<%= posts._id %>" class="btn btn-sm btn-warning">More Info</a>
                    </div>
               </div>
          <% }); %>
     </div>

 
 </div>
 
 </div>
 <% include ../partials/footer %>