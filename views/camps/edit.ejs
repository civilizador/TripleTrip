<% include ../partials/header %>

<div class="container">
<h1 id="submith1">Edit  <%= foundPost.name %></h1>

<div class="row">

<div class="submitform">
<form action="/index/<%= foundPost._id %>?_method=PUT" method="POST">
    
      <div class="form-group">
        <input class="form-control" type="text"  name="campground[name]" value=<%=foundPost.name%> >
          </div>
              <div class="form-group">
                <input class="form-control" required type="number" name="campground[price]" value=<%=foundPost.price%> >
                    </div>
              <div class="form-group">
                <input class="form-control" type="text" placeholder="Insert image URL" name="campground[image]" value=<%=foundPost.image%>>
                    </div>
                         <div class="form-group">
                           <textarea name="campground[desc]" rows="10" cols="50"  ><%=foundPost.desc%></textarea>
                                </div>
                            <div class="form-group">
                                <input class="btn btn-lg btn-warning btn-block" type="submit">
                                     </div>  
</form>

          <form action="/index/<%= foundPost._id %>?_method=DELETE" method="POST">  
            <div class="form-group">
                <button class="btn btn-lg btn-danger btn-block" > DELETE POST </button>
            </div>
        </form>
</div>
</div>
<a href="/index"> Back to CAMPS </a>
</div>

